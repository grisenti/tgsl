extern fn assert(bool)

struct A {
	a: num,
}

fn f1() -> fn() -> num {
  var x = 1;
  var g = fn () -> num {
		return x;
  };
  x = x + 1;
  return g;
}

fn f2() -> fn() -> num {
  var x = A(1);
  var g = fn () -> num {
		return x.a;
  };
  x.a = x.a + 1;
  return g;
}

var z = f1();
var w = f2();
assert(z() == 1);
assert(w() == 2);
